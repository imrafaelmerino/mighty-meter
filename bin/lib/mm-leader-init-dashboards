#!/usr/bin/env bash
set -o errexit

echo ""
echo "(MIGHTY-METER-INSTALLER) | Executing script: $0 $@"
echo ""

main(){

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

source ${DIR}/functions
source ${DIR}/../.versions
source ${DIR}/../.defaults

sleep 5

print_message "creating INFLUXDB DATASOURCE using GRAFANA API"

curl -isS \
--retry 10 \
--retry-delay 2 \
--max-time 10 \
--retry-max-time 60 \
--url ${_GRAFANA_URL}/datasources \
--header 'Content-Type: application/json' \
-d '{
  "name": "mighty-meter",
  "type": "influxdb",
  "access": "proxy",
  "url": "http://'${_NAME_LEADER_INFLUXDB_CONTAINER}':'${_INFLUX_DB_PORT}'",
  "isDefault": true,
  "jsonData" : { "version": "Flux", "organization": "'${_INFLUXDB_ORG}'", "defaultBucket":"'${_INFLUXDB_BUCKET_NAME}'", "tlsSkipVerify": true },
  "secureJsonData": { "token" : "'${_INFLUXDB_TOKEN}'"}
}'

if [ $? -ne 0 ]; then
    error_exit "Error creating INFLUXDB DATASOURCE using GRAFANA API"
fi

DASHBOARD_PAYLOAD_REALTIME="$DIR"/../../leader/dashboards/realtime.json
DASHBOARD_PAYLOAD_EXPLORE="$DIR"/../../leader/dashboards/explore.json
DASHBOARD_PAYLOAD_COMP_BY_VERSION="$DIR"/../../leader/dashboards/compare_by_version.json
DASHBOARD_PAYLOAD_COMP_BY_USERS="$DIR"/../../leader/dashboards/compare_by_users.json
DASHBOARD_PAYLOAD_COMP_BY_TEST="$DIR"/../../leader/dashboards/compare_by_test.json

print_message "creating REALTIME dashboard with GRAFANA API"

curl -isS \
--retry 10 \
--retry-delay 2 \
--max-time 10 \
--url ${_GRAFANA_URL}/dashboards/db \
--retry-max-time 60 \
--header 'Content-Type: application/json' \
-d @${DASHBOARD_PAYLOAD_REALTIME}

if [ $? -ne 0 ]; then
    error_exit "Error creating REALTIME dashboard with GRAFANA API"
fi

print_message "creating EXPLORING dashboard with GRAFANA API"

curl -isS \
--retry 10 \
--retry-delay 2 \
--max-time 10 \
--url ${_GRAFANA_URL}/dashboards/db \
--retry-max-time 60 \
--header 'Content-Type: application/json' \
-d @${DASHBOARD_PAYLOAD_EXPLORE}

if [ $? -ne 0 ]; then
    error_exit "Error creating EXPLORING dashboard with GRAFANA API"
fi

print_message "creating COMPARE_BY_TEST dashboard with GRAFANA API"

curl -isS \
--retry 10 \
--retry-delay 2 \
--max-time 10 \
--url ${_GRAFANA_URL}/dashboards/db \
--retry-max-time 60 \
--header 'Content-Type: application/json' \
-d @${DASHBOARD_PAYLOAD_COMP_BY_TEST}

if [ $? -ne 0 ]; then
    error_exit "Error creating COMPARE_BY_TEST dashboard with GRAFANA API"
fi

print_message "creating COMPARE_BY_VERSION dashboard with GRAFANA API"

curl -isS \
--retry 10 \
--retry-delay 2 \
--max-time 10 \
--url ${_GRAFANA_URL}/dashboards/db \
--retry-max-time 60 \
--header 'Content-Type: application/json' \
-d @${DASHBOARD_PAYLOAD_COMP_BY_VERSION}

if [ $? -ne 0 ]; then
    error_exit "Error creating COMPARE_BY_VERSION dashboard with GRAFANA API"
fi

print_message "creating COMPARE_BY_USERS dashboard with GRAFANA API"

curl -isS \
--retry 10 \
--retry-delay 2 \
--max-time 10 \
--url ${_GRAFANA_URL}/dashboards/db \
--retry-max-time 60 \
--header 'Content-Type: application/json' \
-d @${DASHBOARD_PAYLOAD_COMP_BY_USERS}

if [ $? -ne 0 ]; then
    error_exit "Error creating COMPARE_BY_USERS dashboard with GRAFANA API"
fi

}

main "$@"

