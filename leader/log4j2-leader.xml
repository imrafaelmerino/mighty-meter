<Configuration>
  <Appenders>
    <RollingRandomAccessFile name="leader-appender"
      fileName="/var/log/jmeter/leader-jmeter.log"
      filePattern="/var/log/jmeter/$${date:yyyy-MM-dd}/leader-jmeter-%d{yyyy-MM-dd-HH-mm-ss}-%i.log.gz"
      append="true">
      <PatternLayout>
        <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy/>
        <SizeBasedTriggeringPolicy size="1GB"/>
      </Policies>
      <DefaultRolloverStrategy max="1000"/>
    </RollingRandomAccessFile>
    <Async name="Async">
      <AppenderRef ref="leader-appender"/>
    </Async>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="Async"/>
    </Root>
  </Loggers>
</Configuration>
